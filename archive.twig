<table>
    <thead>
		<th>Datum</th>
		<th>Titel &amp; Themen</th>
		<th>Dauer</th>
	</thead>
	<tbody>
	{% for episode in podcast.episodes %}
		<tr class="podcast_archive_element">
			<td class="date">
				<span class="release_date">
					{{ episode.publicationDate.format('j. F Y') }}
				</span>
			</td>
			<td class="title">
				<a href="{{ episode.url }}">
					<strong>{{ episode.title }}</strong><br>
				</a>
				{{ episode.subtitle }}
				</td>
				<td class="duration">
					{% set duration = episode.duration %}
					<strong>{{ duration.hours }}h {{ duration.minutes|padLeft("0",2)}}min</strong>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

<style type="text/css">
	.podcast_archive_element td {
		vertical-align: middle;
		}
</style>
