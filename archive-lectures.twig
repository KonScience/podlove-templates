<table>
    <thead>
		<th></th>
		<th>Date</th>
		<th>Title</th>
		<th>Duration</th>
	</thead>
	<tbody>
	{% for episode in podcast.episodes({category: "lectures"}) %}
		<tr class="podcast_archive_element">
			<td class="thumbnail">
				<img src="{{ episode.image({fallback: true}) }}" width="64" height="64">
			</td>
			<td class="date">
				<span class="release_date">
					{{ episode.publicationDate.format('j. F Y') }}
				</span>
			</td>
			<td class="title">
				<a href="{{ episode.url }}">
					<strong>{{ episode.title }}</strong><br>
				</a>
				{{ episode.subtitle }}
				</td>
				<td class="duration">
					{% set duration = episode.duration %}
					{{ duration.hours }}:{{ duration.minutes|padLeft("0",2) }}:{{ duration.seconds|padLeft("0",2) }}
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

<style type="text/css">
	.podcast_archive_element .thumbnail {
		width: 64px;
		padding: 5px !important;
		}
	.podcast_archive_element td {
		vertical-align: top;
		}
</style>
