<table>
  <td>
    <a rel="license" href="{{ episode.license.url }}">
      <img alt="{{ episode.license.name }}" src="{{ episode.license.imageUrl }}" style="vertical-align:middle"/>
    </a>
  </td>
  <td><strong>Downloads â¬‡</strong></td>
  {% for file in episode.files %}
  {% if file.asset.downloadable %}
    <td><strong>
      <a href="{{ file.publicUrl("downloads", "buttonlist") }}" download>{{ file.asset.title }}</a> ({{ file.size|formatBytes }})
    </strong></td>
    {% endif %}
  {% endfor %}
</table>
