<table>
  <td>
    <a rel="license" href="{{ episode.license.url }}">
      <img alt="{{ episode.license.name }}" src="{{ episode.license.imageUrl }}" style="vertical-align:middle"/>
    </a>
  </td>
  <td><strong>Downloads:</strong></td>
  {% for file in episode.files %}
    {% set asset = file.asset %}
    {% if asset.downloadable %}
    <td>
      <a href="{{ file.publicUrl("downloads", "buttonlist") }}">{{ asset.title }}</a> ({{ file.size|formatBytes }})
    </td>
    {% endif %}
	{% endfor %}
</table>
